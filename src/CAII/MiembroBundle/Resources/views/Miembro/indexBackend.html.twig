{% extends '::backend.html.twig' %}

{% block contenido %}
        <div class="row-fluid">
            <div class="navbar">
                <div class="navbar-inner">
                    <ul class="breadcrumb">
                        <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                        <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                        <li>
                            <a href="{{path('backend')}}">Dashboard</a> <span class="divider">/</span>  
                        </li>
                        <li class="active">Miembros</li>
                    </ul>
                </div>
            </div>
            <!-- block -->
            <div class="block">


          
                <div class="navbar navbar-inner block-header">
                    <div class="muted pull-left">Miembros</div>
                </div>
                <div class="block-content collapse in">
                    <div class="span12">
                        <div class="table-toolbar">
                          <div class="btn-group">
                             <a href="{{path('miembro_new')}}"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                          </div>
                          <div class="btn-group">
                             <a href="{{path('miembro_print')}}"><button class="btn btn-success">Download <i class="icon-download icon-white"></i></button></a>
                          </div>
                        </div>
                        <div class="table-responsive">
                          <table class="table">
                            <thead>
                              <tr>
                                <th></th>
                                <th>Foto</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Estatus</th>
                                <th>Pagina</th>
                                <th>Tipo</th>
                              </tr>
                            </thead>
                            <tbody id="myTable">

                                  {% for entity in entities %}
                                 
                                      <tr>
                                          <td><a href="{{ path('miembro_show', { 'id': entity.id }) }}">Ver detalles</a></td>
                                          <td>{% if entity.fotoURL %} 
                                                  <img src="{{ asset('uploads/images/miembros/' ~ entity.fotoURL) }}" alt="" alt="" height="42" width="42" />
                                              {% else %}   
                                                   <img src="{{ asset('uploads/images/miembros/unknown-person.gif') }}" alt="" height="42" width="42" />
                                              {% endif %}  
                                          </td>
                                          <td>{{ entity.nombre }}</td>
                                          <td>{{ entity.apellidoP }} {{ entity.apellidoM }}</td>
                                          <td>{% if entity.status==1 %}
                                              Activo
                                          {% else %}
                                              Inactivo
                                          {% endif %}</td>
                                          <td>{{ entity.linkPagina }}</td>
                                          <td>{{ entity.idOcupacion }}</td>
                                          <td nowrap>
                                              <div class="btn-group">
                                                <a href="{{ path('miembro_delete', { 'id': entity.id }) }}"><button class="btn btn-danger">Delete <i class="icon-remove icon-white"></i></button></a>
                                              </div>
                                              <div class="btn-group">
                                                  <a href="{{ path('miembro_edit', { 'id': entity.id }) }}"><button class="btn btn-info">Edit <i class="icon-edit icon-white"></i></button></a>
                                              </div>
                                          </td>    
                                          
                                      </tr>
                                  
                                  {% endfor %}

                            </tbody>
                          </table>
                          
                        </div>  
                        <div class="col-md-12 text-center">
                            <ul class="pagination pagination-lg pager" id="myPager"></ul>
                          </div>
                    </div>
                </div>
            </div>
            <!-- /block -->
        </div>
     
    

      
    
    {% endblock %}
