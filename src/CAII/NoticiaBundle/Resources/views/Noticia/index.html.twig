{% extends '::frontend.html.twig' %}

{% block contenido %}
<!-- ######################## Header ######################## -->
        
        <header>
              <h1 class="welcome_text">{{ 'noticias' | trans }}</h1>    
        </header>



<!-- ######################## Section ######################## -->

   <section class="section_normal">
   
      <div class="row" id="myTable"> 
      
         

        {% for entity in entities %}
        
            
            <h3><a href="#" data-reveal-id="{{ entity.id }}">{{ entity.titulo }}</a></h3>
            <div class="row">
                {%if entity.fotoURL %}
                <div class="three columns">
                    <a href="#" data-reveal-id="{{ entity.id }}"><img src="{{ asset('uploads/images/noticias/' ~ entity.fotoURL) }}" alt="" alt="" height="100%" width="100%" /></a>
                </div>
                {% endif%}
                <div class="nine columns">
                    <p>{{ entity.descripcion | raw}}</p>
                    <p><a href="#" data-reveal-id="{{ entity.id }}">Ver mÃ¡s>></a></p>
                    
                </div>
            </div>
            <div id="{{ entity.id }}" class="reveal-modal xlarge" data-reveal>
                <article>
                    <div class="row">
                        <h3>{{ entity.titulo }}</h3>
                        
                    </div>
                    <div class="row">
                 
                        {% if entity.fotoURL %}                 
                            <img src="{{ asset('uploads/images/noticias/' ~ entity.fotoURL) }}" alt="" alt="" height="30%" width="30%" align="left" style="padding:15px;"/>
                        {% endif %}
                
                        <p align="justify">{{ entity.contenido | raw }}</p>
                    </div>
              </article>
              <a class="close-reveal-modal">&#215;</a>
            </div>   


          
        <br>
       
             
        {% endfor %}
       

      
        </div>
            <div class="row">
                <div class="pagination-centered">
                    <ul class="pagination" id="myPager" ></ul>
                </div>
            </div>
         </div>
        
    </section>
{% endblock %}
