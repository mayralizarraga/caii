{% extends '::backend.html.twig' %}

{% block contenido -%}
		<div class="row-fluid">
            <div class="navbar">
                <div class="navbar-inner">
                    <ul class="breadcrumb">
                        <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                        <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                        <li>
                            <a href="{{path('backend')}}">Dashboard</a> <span class="divider">/</span>  
                        </li>
                        <li>
                            <a href="{{path('slide_backend')}}">Slide</a> <span class="divider">/</span>  
                        </li>
                        <li class="active">Editar</li>
                    </ul>
                </div>
            </div>
            <!-- block -->
            
			   
			   <fieldset>
                    <legend><h1>Editar imagen de slide</h1></legend>
                    {{ form_start(form, { 'action': path('slide_edit', { 'id': entity.id }), 'method': 'PUT' }) }} 
                    	{% if entity.Rutaimagen %} 
                            <img src="{{ asset('uploads/images/slide/' ~ entity.Rutaimagen) }}" alt="" alt="" />
                        {% endif %} <br>
                        {{ form_label(form.foto, 'Imagen') }}
                        {{ form_widget(form.foto) }}
                        {{ form_errors(form.foto) }}
                        <br>
                        <input type="submit" value="Save" >
                         <br>
                    {{ form_end(form) }}
                </fieldset>

			    
			
		</div>		
{% endblock %}